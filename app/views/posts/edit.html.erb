<div class="col-lg-5 offset-lg-3 col-sm-10 offset-sm-1" style="color: white;" align="center">
	<h2>Edit Post</h2>
	<br/>
	<%= simple_form_for @post do |f| %>
		<%= f.input :title %>
		<br/>
		<%= f.input :post_date %>
		<br/>
		<%= f.input :message, :input_html => {:rows => 10, :cols => 55} %>
		<br/>
		<%= f.submit 'Update', class: 'btn btn-primary' %>
	<% end %>
</div>