
	<div class="frost col-6 offset-3">
		<br/>
		<h2 style="color: #4089C9;" align="center"><u>Class News and Updates</u></h2>

		<% if user_signed_in? %>
			<%= link_to 'New Post', new_post_path, class: 'links btn btn-primary' %>
		<% end %>

		<br/>
		<div class="col-10 offset-1" style="color: white;">
			<% @posts.each do |post| %>
				<% if user_signed_in? %>
					<div style="float: right;">
							<%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %>
							<%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
					</div>	
				<% end %>
				<br/>
				<h4 align = "center"><b><u><%= post.title %></u></b></h4><%= post.post_date %><br/>
				<h5><%= post.message %></h5>
				<br/>
					<hr/>
			<% end %>
		</div>
	</div>
	<br/>
	<br/>
