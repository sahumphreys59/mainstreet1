<div class="row">
	<div class="col-lg-7 offset-lg-1 col-sm-10 offset-sm-0 col-md-5">
		<div class="frost">
			<% if user_signed_in? %>
				<%= link_to 'New Post', new_post_path, class: 'links btn btn-primary' %>
			<% end %>
			<br/>
			<h2 style="color: white;" align="center">Class News and Updates:</h2>

			

			<br/>
			<div style="color: white;">
				<% @posts.each do |post| %>
				<br/>
					<% if user_signed_in? %>
						<div style="float: right;">
								<%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %>
								<%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
						</div>	
					<% end %>
					<div style="padding-right: 50px; padding-left: 50px;">
						<h4><b><u><%= post.title %></u></b></h4>
						<div style="float:right;">
							<%= post.post_date.strftime("%m/%d/%Y") %><br/>
						</div>
						<h5 style="font-size: 23px;"><%= post.message %></h5>
					</div>
					<br/>
						<hr/>
				<% end %>
			</div>
		</div>
		<br/>
		<br/>
	</div>
	<div class="col-lg-3 col-md-6">
		<div class="tools">
			<% if user_signed_in? %>
				<div style="float: left;">
					<%= link_to 'New Post', new_tool_path, class: 'links btn btn-primary' %>
				</div>
			<% end %>
			<br/>
			<u><h4 style="color:white;" align="center">Helpful Links</h4></u>
			<br/>
			<% @tools.each do |tool| %>
				<% if user_signed_in? %>
					<div style="float:right;">
						<%= link_to 'Edit', edit_tool_path(tool), class: 'btn btn-primary' %>
						<%= link_to 'Delete', tool_path(tool), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
					</div>
				<% end %>	
				<br/>
				<div style="padding-right: 50px; padding-left: 50px; color:white;"  align="center">
					<h4><%= tool.message %></h4>
				</div>
				<br/>
				<hr>
			<% end %>
			<br/>
		</div>	
	</div>
</div>		


