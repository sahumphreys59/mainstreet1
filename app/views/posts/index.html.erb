<div class="row">
	<div class="col-lg-7 offset-lg-1 col-sm-10 offset-sm-0 col-md-5">
		<div class="frost">
			<% if user_signed_in? %>
				<!-- New Post Button trigger modal -->
					<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newPost">
					  New Post
					</button>
			<% end %>
			<br/>
			<h2 style="color: white;" align="center">Class News and Updates:</h2>

			

			<br/>
			<div style="color: white;">
				<% @posts.each do |post| %>
