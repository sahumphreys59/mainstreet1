<!-- Modal -->
<div class="modal fade" id="newPost" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header" style="background: blue;">
      	<div  align="center">
        	<h5 class="modal-title" id="exampleModalLabel" style="color:white;">New Post</h5>
        </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="background: #0D6D3E; color: white;">
        <%= simple_form_for @post do |f| %>
					<%= f.input :title %>
					<br/>
					<%= f.input :post_date %>
					<br/>
					<%= f.input :message, :input_html => {:cols => 45, :rows => 5} %>
					<br/>
					<div align="center">
						<%= f.submit 'Post', class: 'btn btn-primary' %>
					</div>
				<% end %>
      </div>
    </div>
  </div>
</div>



