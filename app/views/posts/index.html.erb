<div class="row">
	<div class="col-lg-7 offset-lg-1 col-md-10 offset-md-1 col-sm-10 offset-sm-0 ">
		<div class="frost">
			<% if user_signed_in? %>
				<!-- New Post Button trigger modal -->
					<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newPost">
					  New Post
					</button>
			<% end %>
			<br/>
			<h2 style="color: white;" align="center">Class News and Updates:</h2>

			

			<br/>
			<div style="color: white;">
				<% @posts.each do |post| %>
				<br/>
					<% if user_signed_in? %>
						<div style="float: right;">
								<%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %>
								<%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
						</div>	
					<% end %>
					<div style="padding-right: 50px; padding-left: 50px;">
						<h4><b><u><%= post.title %></u></b></h4>
						<div style="float:right;">
							<%= post.post_date.strftime("%m/%d/%Y") %><br/>
						</div>
						<h5 style="font-size: 23px;"><%= post.message %></h5>
					</div>
					<br/>
						<hr/>
				<% end %>
			</div>
		</div>
		<br/>
		<br/>
	</div>
	<div class="col-lg-3 col-md-10 offset-md-1 col-sm-10 offset-sm-0">
		<div class="tools">
			<br/>
			<b><u style="color: #048041;"><h3 style="color:#048041; font-weight: 900;" align="center">Helpful Links</h3></u></b>

			<div class="classlinks">
				<div align="center">
					<h3 style="padding: 20px;"><a href="https://classroom.google.com/c/MTIzMDUzMzgxNzI4" target="_blank">Google Classroom</a></h3>

					<h3 style="padding: 20px;"><a href="https://app.seesaw.me/#/login" target="_blank">Seesaw</a></h3>

					<h3 style="padding: 20px;"><a href="https://www.kidsa-z.com/main/Login" target="_blank">Raz Kids</a></h3>

					<h3 style="padding: 20px;"><a href="http://play.prodigygame.com/" target="_blank">Prodigy Math</a></h3>
				</div>
			</div>	
			<br/>
		</div>	
	</div>
</div>		


<!-- Modal -->
<div class="modal fade" id="newPost" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header" style="background: #2896F7;">
      	<div  align="center">
        	<h5 class="modal-title" id="exampleModalLabel" style="color:white;">New Post</h5>
        </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="background: #0D6D3E; color: white;">
        <%= simple_form_for @post do |f| %>
					<%= f.input :title %>
					<br/>
					<%= f.input :post_date %>
					<br/>
					<%= f.input :message, :input_html => {:cols => 45, :rows => 5} %>
					<br/>
					<div align="center">
						<%= f.submit 'Post', class: 'btn btn-primary' %>
					</div>
				<% end %>
      </div>
    </div>
  </div>
</div>

<br/>
