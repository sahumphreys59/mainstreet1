						<div style="float: right;">
								<%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %>
								<%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
						</div>	
					<% end %>
					<div style="padding-right: 50px; padding-left: 50px;">
						<h4><b><u><%= post.title %></u></b></h4>
						<div style="float:right;">
							<%= post.post_date.strftime("%m/%d/%Y") %><br/>
						</div>
						<h5 style="font-size: 23px;"><%= post.message %></h5>
					</div>
					<br/>
						<hr/>
				<% end %>
			</div>
		</div>
